<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Stock Price"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <panel
                jcr:primaryType="cq:Panel"
                title="StockInfo">
                <items jcr:primaryType="cq:WidgetCollection">
                    <label
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Stock Name with Client"
                        fieldDescription="Provide stock name with client. i.e. NSE:Havells"
                        name="./stockName"
                        xtype="textfield"/>
                    <stockText
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Stock Label"
                            fieldDescription="Label to show with stock price"
                            name="./stockLabel"
                            defaultValue = "NSE"
                            xtype="textfield"/>
                </items>
            </panel>
        </items>
    </items>
</jcr:root>
