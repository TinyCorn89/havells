<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
		  jcr:primaryType="cq:Dialog"
		  title="dialog"
		  xtype="dialog">
	<items
		jcr:primaryType="cq:Widget"
		xtype="tabpanel">
		<items jcr:primaryType="cq:WidgetCollection">
			<panel
				jcr:primaryType="cq:Widget"
				title="Basic Information"
				xtype="panel">
				<items jcr:primaryType="cq:WidgetCollection">
					<items
						jcr:primaryType="nt:unstructured"
						fieldDescription="Select Display type of carousel."
						fieldLabel="Display Type"
						name="./displayType"
						type="select"
						defaultValue="A"
						validateOnBlur="true"
						xtype="selection">
						<options jcr:primaryType="cq:WidgetCollection">
							<dots
								jcr:primaryType="nt:unstructured"
								text="Display Using Dots"
								value="D"/>
							<arrows
								jcr:primaryType="nt:unstructured"
								text="Display using Arrow"
								value="A"/>
						</options>
					</items>
					<videoheading
						jcr:primaryType="cq:Widget"
						defaultValue="Videos"
						fieldLabel="Video Heading"
						name="./heading"
						value="Videos"
						xtype="textfield"/>
				</items>
			</panel>
		</items>
	</items>
</jcr:root>
