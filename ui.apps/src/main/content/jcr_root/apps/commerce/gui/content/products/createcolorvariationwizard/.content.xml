<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Products | Create Color Variation"
        sling:resourceType="granite/ui/components/foundation/page">
        <head jcr:primaryType="nt:unstructured">
            <viewport
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/admin/page/viewport"/>
            <meta
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/meta"
                content="chrome=1"
                name="X-UA-Compatible"/>
            <favicon
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/common/favicon"/>
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/includeclientlibs"
                categories="[coralui2,granite.ui.foundation,granite.ui.foundation.admin,commerce.gui.products.admin]"/>
        </head>
        <body
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/page/body"
            class="coral--light">
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fit"/>
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/form/wizard"
                method="post"
                rel="cq-commerce-products-createvariation">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/wizard"
                    formMode="edit"/>
                <items jcr:primaryType="nt:unstructured">
                    <create-variation-step
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Create Color Variation"
                        sling:resourceType="granite/ui/components/foundation/form/wizard/step">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <variation-properties
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <scaffold
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="commerce/gui/components/admin/common/includescaffold"/>
                                            <node-type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./jcr:primaryType"
                                                value="nt:unstructured"/>
                                            <commerce-type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./cq:commerceType"
                                                value="variant"/>
                                            <resource-type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./sling:resourceType"
                                                value="commerce/components/product"/>
                                            <charset
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="_charset_"
                                                value="utf-8"/>
                                            <type-variant
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./variantType"
                                                value="colorVariant"/>
                                        </items>
                                    </variation-properties>
                                </items>
                            </columns>
                            <wizard-properties
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="commerce/gui/components/admin/common/wizardproperties"
                                destPath="${requestPathInfo.suffix}"
                                redirect="/aem/products.html${requestPathInfo.suffix}"
                                variant="color"/>
                            <cancel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/hyperlink"
                                class="foundation-wizard-control"
                                foundation-wizard-control-action="cancel"
                                href="/aem/products.html${requestPathInfo.suffix}"
                                text="Cancel"/>
                            <create
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/submit"
                                class="foundation-wizard-control"
                                foundation-wizard-control-action="next"
                                text="Create"/>
                        </items>
                    </create-variation-step>
                </items>
            </content>
        </body>
    </jcr:content>
</jcr:root>
